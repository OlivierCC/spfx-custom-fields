{
  // See http://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "0.1.0",
  "command": "gulp",
  "isShellCommand": true,
  "showOutput": "always",
  "args": [
    "--no-color"
  ],
  "tasks": [
    {
      "taskName": "bundle",
      "isBuildCommand": true,
      "problemMatcher": [
        "$tsc"
      ]
    },
    {
      "taskName": "test",
      "isTestCommand": true,
      "problemMatcher": [
        "$tsc"
      ]
    },
    {
      "taskName": "serve",
      "isWatching": true,
      "problemMatcher": [
        "$tsc"
      ]
    }
  ]
}
